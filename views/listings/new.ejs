<% layout('/layouts/boilerplate') -%>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <br />
    <form method="POST" action="/listings" novalidate class="needs-validation">
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          id="title"
          name="listing[title]"
          placeholder="Enter the title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a title.</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="listing[description]"
          placeholder="Enter the description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a description.</div>
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input
          id="image"
          name="listing[image]"
          placeholder="Enter the image URL"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please provide an image URL.</div>
      </div>

      <!-- Price & Location -->
      <div class="row">
        <div class="mb-3 col-3">
          <label for="price" class="form-label">Price</label>
          <input
            id="price"
            name="listing[price]"
            type="number"
            min="0"
            placeholder="Enter the price"
            class="form-control"
            required
          />
          <div class="invalid-feedback">
            Please enter a valid (non-negative) price.
          </div>
        </div>
        <div class="mb-3 col-md-9">
          <label for="location" class="form-label">Location</label>
          <input
            id="location"
            name="listing[location]"
            placeholder="Enter the location"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid location.</div>
        </div>
      </div>

      <!-- Country -->
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          id="country"
          name="listing[country]"
          placeholder="Enter the country name"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid country name.</div>
      </div>

      <!-- Submit -->
      <button type="submit" class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
